<h1>Cat Search</h1>

<p>
<%= form_tag("/search", method: "get") do %>
  <p><%= label_tag(:name, "Search by name or description:") %></p>
  <%= text_field_tag(:name, "", autofocus: true) %>
  <%= submit_tag("Search", class: "button radius") %>
<% end %>
</p>

<div class="index">
  <% if @search.empty? %>
      <p>No cats found! =(⦿⽘⦿)= </p>
    <% else %>
      <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
        <% @search.each do |cat| %>
          <li>
            <p><%= link_to image_tag(cat.url), cat %></p>
            <p><strong><%= link_to cat.name, cat %></strong><br>
            posted by <br> <%= cat.user.email %></p>
          </li>
        <% end %>
      </ul>
    <% end %>
</div>
