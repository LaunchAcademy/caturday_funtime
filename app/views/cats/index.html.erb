<h3>Cat Index:</h3>

<ul>

  <% @cats.each do |cat| %>
    <hr>
    <li>
      <p><%= link_to cat.name, cat %></p>
      <p><%= link_to image_tag(cat.url, class: 'thumbnail'), cat %><p>
      <% end %>
    </li>
    <hr>
</ul>

<% if user_signed_in? == true %>
  <p><%= link_to 'Submit Cat', new_cat_path %></p>
<% else %>
  <p>Please <%= link_to('Login', new_user_session_path)  %> to submit a cat</p>
<% end %>
