<!DOCTYPE html>
<html>
<head>
  <title>Caturday Funtime</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="nav">
  <%= link_to image_tag("caturday_logo.png"), root_path %>
  <ul>
  <% if user_signed_in? %>
    <li>
    <%= link_to('Logout', destroy_user_session_path, class: 'btn btn-default', :method => :delete) %>
    </li>
    <li>
      <%= link_to 'Submit Cat', new_cat_path, class: 'btn btn-default' %>
    </li>
  <% else %>
    <li>
    <%= link_to('Login', new_user_session_path, class: 'btn btn-default') %>
    </li>
  <% end %>
    <li><%= link_to 'Cat Index', cats_path, class: 'btn btn-default' %></li>
  </ul>
</div>

<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<div class="container">
  <%= yield %>
</div>
</body>
</html>
